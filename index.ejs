<% layout('/layouts/boilerplate.ejs') -%>
  

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" style="margin-top: 1rem;">
        <%for(data of pdata){%>
            <a href="/listings/<%=data.id%>" class="card-link">
            <div class="card col">
                <img src="<%=data.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text"><b><%=data.title%></b><br>
                    &#8377;<%=data.price.toLocaleString("en-IN")%>/ night
                </p>
                </div>
              </div>
            </a>
              <% } %>
    </div>

    
